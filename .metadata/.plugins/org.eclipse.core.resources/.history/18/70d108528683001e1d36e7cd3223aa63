<script id="temp_stu" type="x-handlebars-template">
	<table class="table text-center">
		<thead>
			<th>학생번호</th>
			<th>학생이름</th>
			<th>소속학과</th>
			<th>학년</th>
			<th>생년월일</th>
		</thead>
		<tbody>
			{{#each .}}
			<tr>
				<td>{{scode}}</td>
				<td>{{sname}}</td>
				<td>{{dept}}</td>
				<td>{{year}}</td>
				<td>{{birthday}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</script>
<script id="temp_cou" type="x-handlebars-template">
	<table class="table text-center">
		<thead>
			<th>강좌번호</th>
			<th>강좌이름</th>
			<th>강의시간수</th>
			<th>강의실</th>
			<th>수강신청인원수 / 최대수강인원수</th>
		</thead>
		<tbody>
			{{#each .}}
			<tr>
				<td>{{lcode}}</td>
				<td>{{lname}}</td>
				<td>{{hours}}</td>
				<td>{{room}}</td>
				<td>{{persons}}/{{capacity}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</script>
<script id="temp_pro" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="card p-3 text-center">
			<div>교수이름 : {{pname}} ({{pcode}})</div><hr>
			<div>소속학과 : {{dept}}</div><hr>
			<div>직급 : {{title}} ({{fmtdate}})</div><hr>
			<div class="text-center">
				<a href="/pro/update?pcode={{pcode}}" class="btn btn-dark px-5 btn-sm">정보수정</a>
			</div>
		</div>
	</div>
</script>

<script>
	const pcode = "[[${param.pcode}]]";
	$(window).on("load", function () {
		$.ajax({
			type: "get",
			url: "/pro/read.json",
			data: {pcode},
			success: function (data) {
				//console.log(data);
				const temp = Handlebars.compile($("#temp_pro").html());
				$("#div_pro").html(temp(data));
			}
		});
		$.ajax({
			type:"get",
			url:"/pro/stu/list.json",
			data:{pcode},
			success:function(data){
				const temp = Handlebars.compile($("#temp_stu").html());
				$("#div_stu").html(temp(data));
			}
		})
	});
</script>