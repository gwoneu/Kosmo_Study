<div class="my-5">
	<h1 class="text-center mb-5">게시글 정보</h1>
	<div id="div_post"></div>
</div>
<script id="temp_post" type="x-handlebars-template">
	<div class="card">
		<div class="card-body">
			<h5>{{pid}}:{{title}}</h5>
			<hr>
			<p>{{body}}</p>
		</div>
		<div class="card-footer">
			작성자 : {{uname}} ({{writer}}) 작성일 : {{fmtdate}}
		</div>
	</div>
</script>

<script>
	const pid = "[[${pid}]]"; //타임리프로 값을 가져오는 방법
	getPost();
	function getPost(){
		$.ajax({
			type:"get",
			url:"/posts/read.json",
			data:{pid},
			success:function(data){
				const temp = Handlebars.compile($("#temp_post").html());
				$("#div_post").html(temp(data));
			}
		});
	}
</script>