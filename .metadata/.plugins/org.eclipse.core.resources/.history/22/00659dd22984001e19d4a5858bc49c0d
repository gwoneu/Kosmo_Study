<div class="my-5">
	<h1 class="title text-center mb-5">학생목록</h1>
	<div class="row">
		<div class="col-6">
			<form name="frm" class="input-group">
				<select name="key" class="form-select">
					<option value="sname">학생이름</option>
					<option value="scode">학생번호</option>
					<option value="dept">소속학과</option>
					<option value="pname">지도교수</option>
				</select>
				<input name="query" class="form-control ms-2" placeholder="검색어">
				<button class="btn btn-outline-dark">검색</button>
			</form>
		</div>
	</div>
	<hr>
	<div id="div_stu"></div>
</div>
<script id="temp_stu" type="x-handlebars-template">
	<table class="table text-center">
		<thead>
			<th style="width: 10%;">학생번호</th>
	        <th style="width: 15%;">학생이름</th>
	        <th style="width: 20%;">소속학과</th>
	        <th style="width: 10%;">학년</th>
	        <th style="width: 15%;">생년월일</th>
	        <th style="width: 30%;">지도교수 / 지도교수번호</th>
		</thead>
		<tbody>
			{{#each .}}
			<tr>
				<td>{{scode}}</td>
				<td><a href="/stu/read?pcode={{scode}}">{{sname}}</a></td>
				<td>{{dept}}</td>
				<td>{{year}}</td>
				<td>{{fmtdate}}</td>
				<td>{{pname}} ({{advisor}})</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</script>
<script>
	let page=1;
	const size=10;
	
	getList();
	
	$(frm).on("submit", function(e){
		e.preventDefault();
		page=1;
		getList();
	})
	
	function getList(){
		const query = $(frm.query).val();
		const key = $(frm.key).val();
		$.ajax({
			type:"get",
			url:"/stu/list.json",
			data:{size, page, key, query},
			success:function(data){
				const temp=Handlebars.compile($("#temp_stu").html());
				$("#div_stu").html(temp(data));
			}
		});
	}
</script>