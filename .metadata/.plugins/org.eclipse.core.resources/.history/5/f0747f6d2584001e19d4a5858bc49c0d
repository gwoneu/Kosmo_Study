<div class="my-5">
	<h1 class="title text-center mb-5">학생목록</h1>
	<div id="div_stu"></div>
</div>
<script id="temp_stu" type="x-handlebars-template">
	<table class="table text-center">
		<thead>
			<th>학생번호</th>
			<th>학생이름</th>
			<th>소속학과</th>
			<th>학년</th>
			<th>생년월일</th>
			<th>지도교수</th>
		</thead>
		<tbody>
			{{#each .}}
			<tr>
				<td>{{scode}}</td>
				<td><a href="/stu/read?pcode={{scode}}">{{sname}}</a></td>
				<td>{{dept}}</td>
				<td>{{year}}</td>
				<td>{{fmtdate}}</td>
				<td>{{pname}} ({{advisor}})</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</script>
<script>
	let page=1;
	const size=10;
	
	getList();
	
	function getList(){
		$.ajax({
			type:"get",
			url:"/stu/list.json",
			data:{size, page},
			success:function(data){
				const temp=Handlebars.compile($("#temp_stu").html());
				$("#div_stu").html(temp(data));
			}
		});
	}
</script>