<script id="temp_pro" type="x-handlebars-template">
	<table class="table text-center">
		<thead>
			<th>교수번호</th>
			<th>교수이름</th>
			<th>소속학과</th>
			<th>직급</th>
			<th>임용일</th>
			<th>급여</th>
		</thead>
		<tbody>
			{{#each .}}
			<tr>
				<td>{{pcode}}</td>
				<td><a href="/pro/read?pcode={{pcode}}">{{pname}}</a></td>
				<td>{{dept}}</td>
				<td>{{title}}</td>
				<td>{{fmtdate}}</td>
				<td>{{fmtsalary}}원</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</script>
<script>
	getList();
	
	function getList(){
		$.ajax({
			type:"get",
			url:"/pro/list.json",
			success:function(data){
				const temp=Handlebars.compile($("#temp_pro").html());
				$("#div_pro").html(temp(data));
			}
		});
	}
</script>