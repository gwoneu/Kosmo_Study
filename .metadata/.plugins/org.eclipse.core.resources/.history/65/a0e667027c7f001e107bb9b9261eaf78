<div class="my-5">
	<h1 class="text-center mb-5">마이페이지</h1>
	<div id="div_mypage" class="row justify-content-center"></div>
</div>

<script id="temp_mypage" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="mb-5 text-center">
			<img class="photo" id="photo" src="http://via.placeholder.com/200x200" width="200">
			<input type="file" id="file" style="display:none">
			<div class="mt-2"><button id="btn-photo" class="btn btn-dark">사진저장</button></div>
		</div>
		<div class="card text-center p-4 mb-4">
			<div class="mb-2">{{uname}}</div>
			<div class="mb-2">{{phone}}</div>
			<div class="mb-2">{{address1}} {{address2}}</div>
		</div>
		<div class="my-3 text-center">
			<a href="/users/update" class="btn btn-dark px-4 btn-sm">정보수정</a>
		</div>
	</div>
</script>

<script>
	getMypage();
	
	$("#div_mypage").on("change", "#file", function(e){
		$("#div_mypage #photo").attr("src", URL.createObjectURL(e.target.files[0]));	
	});
	
	$("#div_mypage").on("click", "#photo", function(){
		$("#div_mypage #file").click();
	});
	
	function getMypage(){
		$.ajax({
			type:"get",
			url:"/users/read",
			data:{uid:sessionStorage.getItem("uid")},
			success:function(data){
				//console.log(data);
				const temp = Handlebars.compile($("#temp_mypage").html());
				$("#div_mypage").html(temp(data));
			}
		});
	}
</script>