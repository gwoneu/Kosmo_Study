	<h1 class="text-center mb-5">마이페이지</h1>
	<div id="div_mypage" class="row justify-content-center"></div>
</div>

<script id="temp_mypage" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="mb-4 text-center">
			<img src="http://via.placeholder.com/200x200" width="200">
			<input type="file">
		</div>
		<div class="card text-center p-4 mb-4">
			<div class="mb-2">{{uname}}</div>
			<div class="mb-2">{{phone}}</div>
			<div class="mb-2">{{address1}} {{address2}}</div>
		</div>
		<div class="my-3 text-center">
			<a href="/users/update" class="btn btn-dark px-4 btn-sm">정보수정</a>
		</div>
	</div>
</script>

<script>
	getMypage();
	
	function getMypage(){
		$.ajax({
			type:"get",
			url:"/users/read",
			data:{uid:sessionStorage.getItem("uid")},
			success:function(data){
				//console.log(data);
				const temp = Handlebars.compile($("#temp_mypage").html());
				$("#div_mypage").html(temp(data));
			}
		});
	}
</script>