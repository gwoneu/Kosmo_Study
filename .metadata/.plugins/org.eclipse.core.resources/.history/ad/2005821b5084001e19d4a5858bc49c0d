	<table class="table table-hover text-center">
		<thead>
			<th style="width: 10%;">학생번호</th>
	        <th style="width: 15%;">학생이름</th>
	        <th style="width: 20%;">소속학과</th>
	        <th style="width: 10%;">학년</th>
	        <th style="width: 15%;">생년월일</th>
	        <th style="width: 30%;">지도교수 / 지도교수번호</th>
		</thead>
		<tbody>
			{{#each .}}
			<tr>
				<td>{{lcode}}</td>
				<td><a href="/cou/read?lcode={{lcode}}">{{lname}}</a></td>
				<td>{{hours}} ({{room}}</td>
				<td>{{pname}} ({{instructor}})</td>
				<td>{{person}} / {{capacity}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</script>
<script>
	function getList(){
		$.ajax({
			type:"get",
			url:"/cou/list.json",
			data:{size, page},
			success:function(data){
				if(data==0){
					$("#div_stu").html("<h4 class='search_none text-center my-5'>검색자료가 존재하지 않습니다.</h4>");
				}else{
					const temp=Handlebars.compile($("#temp_cou").html());
					$("#div_cou").html(temp(data));
				}
			}
		});
	}
</script>