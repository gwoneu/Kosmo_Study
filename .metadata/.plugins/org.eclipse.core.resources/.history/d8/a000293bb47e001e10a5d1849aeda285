<div class="my-5">
	<h1 class="text-center mb-5">게시글정보</h1>
	<div class="text-end mb-3">
		<button class="btn btn-sm btn-dark">수정</button>
		<button class="btn btn-sm btn-outline-dark">삭제</button>
	</div>
	<div id="div_post"></div>
</div>
<script id="temp_post" type="x-handlebars-template">
	<div class="card">
		<div class="card-body">
			<h3>[{{pid}}] {{title}}</h3>
			<hr>
			<p>{{body}}</p>
		</div>
		<div class="card-footer">
			<span>작성일 : {{fmtdate}}</span>
			<span>작성자 : {{uname}} ({{writer}})</span>
		</div>
	</div>
</script>

<script>
	const pid = "[[${pid}]]";
	//alert(pid); pid 가 넘어오는지 확인 alert
	getPost();
	function getPost(){
		$.ajax({
			type:"get",
			url:"/posts/read.json",
			data: {pid},
			success:function(data){
				//console.log(data);
				const temp = Handlebars.compile($("#temp_post").html());
				$("#div_post").html(temp(data));			}
		});
	}
</script>