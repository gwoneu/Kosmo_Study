package com.example.controller;

import java.io.FileInputStream;

import org.apache.commons.io.IOUtils;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ResponseBody;

@Controller
public class HomeController {
	@ResponseBody //데이터 출력(브라우저)
	@GetMapping("/hello") // 주소를 알려주는 것
	public String hello() { //메소드 안에 retunr이 없으면 오류가뜸
		return "hello........";
	}
	
	@GetMapping("/")
	public String home(Model model) {
		model.addAttribute("pageName", "about");
		return "home"; //home.html로 이동
	}
	
	@GetMapping("/display")
	public @ResponseBody byte[] display(String fileName) throws Exception{
		FileInputStream in = new FileInputStream("c:" + fileName);
		return IOUtils.toByteArray(in);
	}
}
