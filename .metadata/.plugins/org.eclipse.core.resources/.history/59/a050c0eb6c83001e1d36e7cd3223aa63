<div class="my-5">
	<h1 class="text-center mb-5">교수정보</h1>
	<div id="div_pro" class="row justify-content-center"></div>
</div>
<script id="temp_pro" type="x-handlebars-template">
	<div class="col-md-6">
		<div class="card p-3">
			<div>교수이름 : {{pname}} ({{pcdoe}})</div><hr>
			<div>소속학과 : {{dept}}</div><hr>
			<div>직급 : {{title}}</div><hr>
			<div>임용일 : {{fmtdate}}</div><hr>
		</div>
	</div>
</script>

<script>
	const pcode="[[${param.pcode}]]";
	$(window).on("load", function(){
		$.ajax({
			type:"get",
			url:"/pro/read.json",
			data:{pcode},
			success:function(data){
				//console.log(data);
				const temp=Handlebars.compile($("#temp_pro").html());
				$("#div_pro").html(temp(data));
			}
		});
	});
</script>