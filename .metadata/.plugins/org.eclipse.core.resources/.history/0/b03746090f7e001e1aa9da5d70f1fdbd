<div class="my-5">
	<h1 class="text-center mb-5">글쓰기</h1>
	<form name="frm">
		<input name="title" class="form-control mb-3" placeholder="제목을 입력하세요.">
		<textarea name="body" class="form-control" rows="10"></textarea>
		<div class="text-center mt-4">
			<button class="btn btn-dark" type="submit">저장</button>
			<button class="btn btn-outline-dark" type="reset">취소</button>
		</div>
	</form>
</div>
<script> //$ -> jquery
	$(frm).on("submit", function(e){
		e.preventDefault();
		const title = $(frm.title).val();
		const body = $(frm.body).val();
		const uid = "sky";
		if(title == ""){
			alert("제목을 입력하세요.");
			$(frm.title).focus();
			return;
		}
		if(confirm("저장하시겠습니까?")){
			$.ajax({
				type:"post",
				url:"/posts/insert",
				success:function(){
					location.href="/posts";
				}
			});
		}
	});
</script>