<style>
    button {
        height: 45px;
    }
</style>
<div class="my-5 row justify-content-center mx-3">
    <h1 class="text-center mb-5">로그인</h1>
    <div class="col-md-6 col-lg-4 card p-3 shadow p-3 mb-5 bg-body-tertiary rounded">
    <form name="frm">
        <div class="input-group mb-3">
            <span class="input-group-text">아이디</span>
            <input name="uid" class="form-control">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">비밀번호</span>
            <input name="upass" class="form-control" type="password">
        </div>
        <button class="btn btn-danger w-100 mb-3">로그인</button>
    </form>
        <div class="text-end">
            <a href="/users/insert" class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">회원가입</a>
        </div>
    </div>
</div>
<script>
    $(frm).on("submit", function(e) {
        e.preventDefault();
        const uid=$(frm.uid).val();
        const upass=$(frm.upass).val();
        //유효성체크
        if(uid==""){
            alert("아이디를 입력하세요")
            $(frm.uid).focus();
        } else if(upass=="") {
            alert("비밀번호를 입력하세요")
            $(frm.upass).focus();
        } else {
            //로그인체크
            $.ajax({
                type:"post",
                url:"/users/login",
                data:{uid:uid, upass:upass},
                success:function(data){
                    if(data==0){
                        alert("아이디가 존재하지 않습니다.")
                    } else if(data==2) {
                        alert("비밀번호가 일치하지 않습니다.")
                    } else {
                        sessionStorage.setItem("uid", uid);

                        const target=sessionStorage.getItem("target");
                        if(target){
                            location.href=target;
                        }else{
                            location.href="/";
                        }
                    }
                }
            });
        }
    })
</script>