<div class="my-5 row">
    <h1 class="text-center mb-5">지역검색</h1>
    <div class="row">
        <form name="frm" class="col-md-4">
            <div class="input-group mb-3">
                <input name="query" value="버거킹" class="form-control">
                <button class="btn btn-danger">검색</button>
            </div>
        </form>
    </div>
    <hr>
    <div id="div_local"></div>
    <div id="map" style="height:400px;"></div> <!-- 높이만 지정하면 가로는 풀로 차서 나옴 -->
</div>
<script id="temp_local" type="x-handlbars-template">
    <table class="table">
        <thead>
            <tr class="align-middle table-secondary">
                <th scope="col">Name</td>
                <th scope="col">address</td>
                <th scope="col">phone</td>
                <th scope="col"></td>
            </tr>
        </thead>
        {{#each documents}}
        <tr class="align-middle">
            <td>{{place_name}}</td>
            <td>{{address_name}}</td>
            <td>{{phone}}</td>
            <td> <button x="{{x}}" y="{{y}}" name="{{place_name}}" class="btn btn-outline-danger">위치보기</button></td> <!--attr값을 줄때에는 최대한 ""로 주기-->
        </tr>
        {{/each}}
    </table>
</script>
<script>
    $(frm).on("submit", function(e){
        e.preventDefault();
        if($(frm.query).val()==""){
            alert("검색어를 입력하세요.");
            $(frm.query).focus();
        }else{
            getList();
        }
    });

    $("#div_local").on("click", "button", function(){
        const x = $(this).attr("x");
        const y = $(this).attr("y");
        const name = $(this).attr("name");
        console.log(x, y, name);
        var container = document.getElementById('map'); //지도를 담을 영역의 DOM 레퍼런스
        var options = { //지도를 생성할 때 필요한 기본 옵션
            center: new kakao.maps.LatLng(y, x), //지도의 중심좌표.
            level: 3 //지도의 레벨(확대, 축소 정도)
        };
        var map = new kakao.maps.Map(container, options); //지도 생성 및 객체 리턴
    });

    //검색결과
    getList();
    function getList(){
        $.ajax({
            type:"get",
            url:"https://dapi.kakao.com/v2/local/search/keyword.json",
            data:{query:$(frm.query).val(), size:5}, //query에는 검색어가 들어감
            headers:{"Authorization":"KakaoAK b9e7c3ac23fcce51a89eeebcbaf568f1"},
            success:function(data){
                //console.log(data);
                const temp = Handlebars.compile($("#temp_local").html());
                $("#div_local").html(temp(data));
            }
        });
    }
</script>